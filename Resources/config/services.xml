<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="codesushi.variator_bundle.config_resolver.class">Codesushi\VariatorBundle\ConfigResolver</parameter>
        <parameter key="codesushi.variator_bundle.factory.class">Codesushi\VariatorBundle\VariationFactory</parameter>
    </parameters>

    <services>
        <service
                id="codesushi.variator_bundle.config_resolver"
                class="%codesushi.variator_bundle.config_resolver.class%"
                shared="false"
        >
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="codesushi.variator_bundle.factory" class="%codesushi.variator_bundle.factory.class%">
            <argument type="service" id="codesushi.variator_bundle.config_resolver" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="codesushi.variator_bundle.builder" class="Codesushi\Variator\VariationsTreeBuilder">
            <argument type="service" id="codesushi.variator_bundle.factory" />
        </service>
    </services>

</container>